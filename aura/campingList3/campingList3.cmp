<aura:component implements="force:appHostable">
<aura:attribute name="newItem" type="Camping_Item__c"
                    default="{  'sobjectType': 'Camping_Item__c',
                                'Name': '',
                                'Quantity__c': 0,
                                'Price__c': 0,
                                'Packed__c': false }" />
    <aura:attribute name="items" type="Camping_Item__c[]"/>
      <lightning:layout >
         <form class="slds-form--stacked">
        <lightning:layoutItem padding="around-small" size="6">  
           <lightning:input aura:id="campForm" label="Name" name="campAmount" min="0.1" formatter="currency" step="0.01" value="{!v.newItem.Name}" messageWhenRangeUnderflow="Enter an amount that's at least $0.10."/>
           <lightning:input type="number" aura:id="campForm" label="Quantity" name="campQuantity" min="1" formatter="currency" step="0.01" value="{!v.newItem.Quantity__c}" messageWhenRangeUnderflow="Enter an amount that's at least $0.10."/>
           <lightning:input type="number" aura:id="campForm" label="Price" name="campPrice" min="0.1" formatter="currency" step="0.01" value="{!v.newItem.Price__c}" messageWhenRangeUnderflow="Enter an amount that's at least $0.10."/>
           <lightning:input type="checkbox" aura:id="expenseform" label="Packed" name="campPacked" checked="{!v.newItem.Packed__c}"/>
          
        </lightning:layoutItem>
         <lightning:button label="Create Expense" class="slds-m-top--medium" variant="brand" onclick="{!c.clickCreateItem}"/>
         </form>
     </lightning:layout>
</aura:component>